<?xml version='1.0' encoding='utf-8'?>
<widget id="app.fleamaster.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FleaMaster</name>
    <description>
        App to buy and sell things easily.
    </description>
    <author email="dev@fleamaster.com" href="http://fleamaster.com">
        FleaMaster
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icons/android/hdpi/icon.png" />
        <icon density="ldpi" src="res/icons/android/ldpi/icon.png" />
        <icon density="mdpi" src="res/icons/android/mdpi/icon.png" />
        <icon density="xhdpi" src="res/icons/android/xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/icons/android/xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/icons/android/xxxhdpi/icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~7.0.0" />
</widget>
